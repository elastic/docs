PUT server-metrics
{
  "settings": {
    "number_of_shards":1,
    "number_of_replicas":0
  },
  "mappings": {
    "metric": {
      "properties":{
        "@timestamp": {
          "type":"date"
        },
        "accept": {
          "type":"long"
        },
        "deny": {
          "type":"long"
        },
        "host": {
          "type":"keyword"
        },
        "response": {
          "type":"float"
        },
        "service": {
          "type":"keyword"
        },
        "total": {
          "type":"long"
        }
      }
    }
  }
}
